{
    "name": "Dark Mode for Canvas",
    "version": "1.2",
    "manifest_version": 2,
    "description": "Make Canvas more readable at at night.",
    "background": {
        "scripts": [
            "popup.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_title": "Dark Mode for Canvas",
        "default_popup": "popup.html"
    },
    "icons": { "16": "icons/icon16.png",
        "48": "icons/icon48.png",
       "128": "icons/icon128.png" },

      "permissions": [
       "activeTab"
    ]
}